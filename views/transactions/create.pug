extends ../layouts/common
block content
  h2.text-center ADD TRANSACTION
  .container-sm
    form.d-flex.flex-column(action="/transactions/create", method="POST")
      .container-sm.w-50.d-flex.flex-row.mt-3
        div(class="d-flex ml-3")  
          div(class="input-group-prepend")
            label(for="user" class="input-group-text" id="inputGroup-sizing-default") User
          select(class="btn btn-secondary dropdown-toggle" name="userId", id="user")
            each user in users
              option(value=user.id)= user.name       
        div(class="d-flex ml-3")  
          div(class="input-group-prepend")
            label(for="book" class="input-group-text" id="inputGroup-sizing-default") Book
          select(class="btn btn-secondary dropdown-toggle" name="bookId", id="book")
            each book in books
              option(value=book.id)= book.title     
        button(class="btn btn-primary ml-3") ADD


      