extends ../layouts/common
block content

	h2.text-center ADD USER
	.container-sm
		if errors
			each error in errors
				.alert.alert-danger= error
		form.d-flex.flex-column(action="/users/create", method="POST", enctype="multipart/form-data")
			.form-group.w-50
				label(for="phone") Name
				input#name(type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" name="name" value=values ? values.name : '')
			.form-group.w-50
				label(for="phone") Phone
				input#phone(type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" name="phone" value=values ? values.phone : '')
			.form-group.w-50
				label(for="email") Email
				input#email(pattern="^([A-Z|a-z|0-9](\.|_){0,1})+[A-Z|a-z|0-9]\@([A-Z|a-z|0-9])+((\.){0,1}[A-Z|a-z|0-9]){2}\.[a-z]{2,3}$", required='', type="text", class="form-control", name="email" value=values ? values.email : '')
			.form-group.w-50
				label(for="password") Password
				input#password(type="text" class="form-control-file" name="password" value=values ? values.password : '')
			.form-group.w-50
				label(for="avatar") Avatar
				input#avatar(type="file" class="form-control-file" name="avatar")

			button(class="btn btn-primary ml-2") ADD